        <ul class="mapas">
            {% for galeria in pagina.galerias %}
                <li id="mapa-{{ galeria.titulo }}"><img  style="z-index: {{loop.index*100}}" src="{{ galeria.webPath }}" /></li>		
            {% endfor %}
        </ul>
        <form action="#" class="formulario">
            <h3 class="encabezadoInca">Visualizar:</h3>
            <div class="grupo-checkbox-icono">
            <input id="oficinas" type="checkbox" data-imagen="oficinas" value="oficinas">
            <img src="{{asset('images/keyarts/iconos/oficinas.png')}}"/>
            <span>{{"Oficinas INCA"|trans}}</span>
            </div>
            <img src="{{asset('images/keyarts/iconos/separador.png')}}"/>
            <div class="grupo-checkbox-icono">
            <input id="edificacion" type="checkbox" data-imagen="edificacion" value="edificacion">
            <img src="{{asset('images/keyarts/iconos/edificacion.png')}}"/>
