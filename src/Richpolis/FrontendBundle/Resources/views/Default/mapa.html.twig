{% extends 'FrontendBundle::layout.html.twig' %}

{% block stylesheets %}
    {{  parent()  }}
    <style type="text/css" media="all">
        input[type="checkbox"]{ 
            width: 20px;
            height: 20px; 
        }
    </style>
{% endblock %}

{% block contenido %}
